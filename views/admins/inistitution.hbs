<div class="serviceContant">
    <div class="container">
        <h3>
            机构管理
        </h3>
        <div class="panel panel-success">
            <div class="panel-heading">机构查询
            </div>
            <div class="panel-body">
                <div class="row form-horizontal">
                    <div class="col-lg-4 form-groupcol-md-4 form-group">
                        <label class="col-sm-4 control-label" for="OrderID">
                              国家
                                </label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="OrderID" ng-model="f.OrderID">
                        </div>
                    </div>
                    <div class="col-lg-4 form-groupcol-md-4 form-group">
                        <label class="col-sm-6 control-label" for="OrderID">
                                   名称(学校/公司/医院):
                                 </label>
                        <div class="col-sm-6">
                            <input class="form-control" type="text" id="OrderID" ng-model="f.OrderID">
                        </div>
                    </div>
                    <div class="col-lg-4 form-group col-md-4">
                        <button class="btn btn-primary" ng-click="search()">查询</button>
                        <button class="btn btn-primary" ng-click="cancel()">取消</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-success">
            <div class="panel-heading">机构列表
                <a class="btn btn-primary pull-right " style="margin-top:-5px;" href="#!/users/inistitutionDetail?type=add">
                       <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        新增
                    </a>
            </div>
            <table class="table table-striped table-bordered table-condensed table-responsive ">
                <tr class="animated flash">
                    <td class="hidden">ID</td>
                    <td>国家</td>
                    <td>机构（学校/公司/医院）名称</td>
                    <td>院系/部门/科室</td>
                    <td>实验室/二级部门/二级科室</td>
                    <td>二级实验室/三级部门/三级科室</td>
                    <td>负责人</td>
                    <td>备注</td>
                    <td colspan="3" style="width:220px">操作列</td>
                </tr>
                <tr ng-repeat='iteam in datas track by $index'>
                    <td class="hidden" >[[iteam._id]]</td>
                    <td>[[iteam.Country]]</td>
                    <td>[[iteam.Instituion]]</td>
                    <td>[[iteam.Department]]</td>
                    <td>[[iteam.lab]]</td>
                    <td>[[iteam.secondLab]]</td>
                    <td>[[iteam.personInCharge]]</td>
                    <td>[[iteam.Memo]]</td>
                    <td colspan="3" style="width:220px">
                        <div class="btn-group" role="group" aria-label="...">
                            <a class="btn btn-primary" href="#!/users/inistitutionDetail?_id=[[iteam._id]]&type=edit">编辑查看</a>
                            <button class="btn btn-info" ng-click="updateLine($index)">设置默认</button>
                        </div>
                    </td>
                </tr>

            </table>
            <jason-pagination conf='paginationConf'></jason-pagination>
        </div>
        
 
       
          <jason-pagecontent action='/users/getInistitutionLists' conf='paginationConf'></jason-pagecontent>
    </div>
</div>