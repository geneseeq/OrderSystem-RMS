<div class="serviceContant" ng-controller="addressController">
    <div class="container">
        <h3>
            地址管理
        </h3>
        <jason-pagecontent action="/users/getAddressList" conf='paginationConf'>
            <div class="panel panel-success" ng-show = 'show'>
                <div class="panel-heading">新增地址
                </div>
                <div class="panel-body">
                    <div class="row form-horizontal" id="citySelect">
                        <div class="col-lg-4 form-groupcol-md-4 form-group">
                            <label class="col-sm-4 control-label" for="country">
                                国家
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" disabled="disabled" type="text" id="country" ng-model="formdata.Country">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="province">
                                省份
                            </label>
                            <div class="col-sm-8">
                                <!--<input class="form-control" type="text" id="OrderType" ng-model="formdata.Province">-->
                                <select class="form-control" class="prov" id="province" ng-model="formdata.Province"
                                        ng-options='act for act in province' ng-change="changeCity()">
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="city">
                                城市
                            </label>
                            <div class="col-sm-8">
                                <!--<input class="form-control" type="text" id="UserName" ng-model="formdata.City">-->
                                <select class="form-control" class="city" id="city" ng-model="formdata.City"
                                        ng-options='act for act in city' ng-change="changeDist()">

                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="dist">
                                县/区
                            </label>
                            <div class="col-sm-8">
                                <!--<input class="form-control" type="text" id="Phone" ng-model="formdata.Region">-->
                                <select class="form-control" class="dist" id="dist" ng-model="formdata.Dist"
                                        ng-options='act for act in dist'>

                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="addressDetail">
                                详细住址
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="addressDetail" ng-model="formdata.AddressDetail">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="postcode">
                                邮编
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="postcode" ng-model="formdata.Postcode">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4 text-center">
                            <button class=" btn btn-primary" ng-click="addAddress('/users/addAddress')" ng-show="add">添加</button>
                            <button class="btn btn-primary" ng-click="addAddress('/users/addAddress')" ng-show="save">保存</button>
                            <button class=" btn btn-primary" ng-click="show=false;formdata={}">取消</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--<jason-pagination conf='paginationConf'></jason-pagination>-->
            <div class="panel panel-success">
                <div class="panel-heading">地址列表
                    <span class="btn btn-primary pull-right " style="margin-top:-5px;"  ng-click = 'show=true;add=true;save=false'>
                    <span class="glyphicon glyphicon-plus"></span>
                    新增
                    </span>
                </div>
                <table class="table table-striped table-bordered table-condensed table-responsive ">
                    <tr class="animated flash">
                        <td>国家</td>
                        <td>省</td>
                        <td>市</td>
                        <td>区/县</td>
                        <td>详细住址</td>
                        <td>邮编</td>
                        <td colspan="3" style="width:220px">操作列</td>
                    </tr>
                    <tr ng-repeat='iteam in datas'>
                        <td>[[iteam.Country]]</td>
                        <td>[[iteam.Province]]</td>
                        <td>[[iteam.City]]</td>
                        <td>[[iteam.Dist]]</td>
                        <td>[[iteam.AddressDetail]]</td>
                        <td>[[iteam.Postcode]]</td>
                        <td colspan="3" style="width:220px">
                            <div class="btn-group" role="group" aria-label="...">
                                <span class="btn btn-primary" ng-click="check(iteam._id)">编辑</span>
                                <button class="btn btn-info" ng-click="delete(iteam._id)">删除</button>
                                <button class="btn btn-warning" ng-click="setDefault(iteam._id)" ng-hide="[[iteam.default]]">设为默认</button>
                                <button class="btn btn-danger" disabled="disabled" ng-show="[[iteam.default]]">默认地址</button>
                            </div>
                        </td>
                    </tr>

                </table>
            </div>

        </jason-pagecontent>
    </div>
</div>