<div class="serviceContant">
    <div class="">
        <h3>
            送样单审核
        </h3>
        <jason-pagecontent action="/List/getOrderList" conf='paginationConf'>
            <div class="panel panel-success">
                <div class="panel-heading">  送样单查询
                </div>
                <div class="panel-body">
                    <div class="row form-horizontal">
                        <div class="col-lg-4 form-groupcol-md-4 form-group">
                            <label class="col-sm-4 control-label" for="OrderID">
                                  送样单ID
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="OrderID" ng-model="f.OrderID">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="OrderType">
                                项目ID
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="OrderType" ng-model="f.OrderType">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="UserName">
                                下单人姓名
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="UserName" ng-model="f.UserName">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="OrderType">
                                  送样单类型
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="OrderType" ng-model="f.OrderType">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="CheckStatus">
                                审核状态
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="CheckStatus" ng-model="f.CheckStatus">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="Statues">
                                  送样单状态
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="Statues" ng-model="f.Statues">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <label class="col-sm-4 control-label" for="ReceiveWayBill">
                                运单号
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="ReceiveWayBill" ng-model="f.ReceiveWayBill">
                            </div>
                        </div>
                        <div class="col-lg-4 form-group col-md-4">
                            <button class="btn btn-primary" ng-click="search()">查询</button>
                            <button class="btn btn-primary" ng-click="cancel()">取消</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">  送样单列表
                    <!--<span class="btn btn-primary pull-right " style="margin-top:-5px;"  ng-click = 'show=true;add=true;save=false'>-->
                    <!--<span class="glyphicon glyphicon-plus"></span>-->
                    <!--新增-->
                    <!--</span>-->
                </div>
                <table class="table table-striped table-bordered table-condensed table-responsive ">
                    <tr class="animated flash">
                        <!--<td>选择框</td>-->
                        <td>  送样单ID</td>
                        <td>项目ID</td>
                        <td>下单人</td>
                        <td>  送样单类型</td>
                        <td>机构地址</td>
                        <td>  送样单状态</td>
                        <td>审核状态</td>
                        <td colspan="3" style="width:220px">操作列</td>
                    </tr>
                    <tr ng-repeat="iteam in datas">
                        <!--<td style="text-align: center">-->
                            <!--<input type="checkbox" ng-value="iteam._id" ng-checked="all" ng-model="iteam.checked">-->
                        <!--</td>-->
                        <td>[[iteam.OrderID]]</td>
                        <td>[[iteam.ProgrameID]]</td>
                        <td>[[iteam.UserID]]</td>
                        <td>[[ ["文库无需世和混合，包lane","文库需世和混合上机，包lane","需要世和混合上机，不包lane包G","文库无需世和混合，包FC(flow cell)"][iteam.OrderType] ]]</td>
                        <td>[[iteam.InstituionString]]</td>
                        <td style="color: red;">[[iteam.Statues|status]]</td>
                        <td style="color: red;">[[iteam.CheckStatus|status]]</td>
                        <td colspan="3" style="width:220px">
                            <div class="btn-group" role="group" aria-label="...">
                                <a class="btn btn-primary" href="#!/orders/orderDetail?OrderID=[[iteam.OrderID]]&type=edit">详情</a>
                                <a class="btn btn-info" ng-click="operate($index)">操作</a>
                            </div>
                        </td>
                    </tr>

                </table>
                <div style="text-align: center;">
                </div>
                <jason-pagination conf='paginationConf'></jason-pagination>
            </div>

        </jason-pagecontent>

    </div>
</div>
<div id="result-modal-remark" class="modal fade" tabindex="-1" role="dialog">
    <input type="hidden" ng-model="index">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">备注</h4>
            </div>
            <div class="modal-body row">
                <div class="col-sm-6">
                    <label for="">客户反馈</label>
                    <textarea cols="30" rows="10" ng-model="remark.feedback"></textarea>
                </div>
                <div class="col-sm-6">
                    <label for="">意见</label>
                    <textarea cols="30" rows="10" ng-model="remark.checksuggestion"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button ng-click="updateLine(index,'/orders/orderPass')">查看</button>
                <button ng-click="updateLine(index,'/orders/orderUnapprove')">信息不全</button>
                <button ng-click="hideModel()">取消</button>
            </div>
        </div>
    </div>
</div>